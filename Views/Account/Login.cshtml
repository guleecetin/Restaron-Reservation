@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h2 class="text-center text-gold mb-4">@ViewData["Title"]</h2>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="text-gold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="text-gold">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <div class="checkbox">
                                <label asp-for="RememberMe" class="text-gold">
                                    <input asp-for="RememberMe" /> RememberMe
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-gold w-100">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background: #0a0a0a;
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .text-gold {
        color: #d4af37;
    }

    .btn-gold {
        background: #d4af37;
        color: #000;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-gold:hover {
            background: #e5c158;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212,175,55,0.3);
        }

    .form-control, .form-select {
        background-color: rgba(255,255,255,0.05) !important;
        border: 1px solid rgba(212,175,55,0.2) !important;
        color: #fff !important;
        transition: all 0.3s ease;
    }


    .table-card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        border-radius: 15px;
        border: 1px solid rgba(212,175,55,0.1);
        transition: all 0.3s ease;
        padding: 1.5rem;
    }

        .table-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(212,175,55,0.15);
        }

    .table-visual {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .table-icon {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        position: relative;
        border: 2px solid;
        transition: all 0.3s ease;
    }

        .table-icon.available {
            background: rgba(40, 167, 69, 0.1);
            border-color: #28a745;
        }

        .table-icon.occupied {
            background: rgba(220, 53, 69, 0.1);
            border-color: #dc3545;
        }

    .table-number {
        font-size: 28px;
        font-weight: bold;
        color: #d4af37;
    }

    .table-details {
        min-height: 70px;
    }

    .label {
        color: #d4af37;
        font-weight: 500;
        margin-right: 8px;
    }

    .value {
        color: #fff;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .status-badge.available {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 1px solid #28a745;
        }

        .status-badge.occupied {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border: 1px solid #dc3545;
        }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-edit, .btn-delete {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .btn-edit {
        background: #d4af37;
        color: #000;
        border: none;
    }

        .btn-edit:hover {
            background: #e5c158;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212,175,55,0.3);
        }

    .btn-delete {
        background: transparent;
        color: #dc3545;
        border: 1px solid #dc3545;
    }

        .btn-delete:hover {
            background: rgba(220, 53, 69, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220,53,69,0.2);
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        border-radius: 15px;
        border: 1px solid rgba(212,175,55,0.1);
        margin-top: 2rem;
    }

        .empty-state h3 {
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: rgba(255,255,255,0.7);
        }
</style>