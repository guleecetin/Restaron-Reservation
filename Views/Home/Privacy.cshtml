@{
    ViewData["Title"] = "Contact Urban Retreat";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: #0a0a0a;
        min-height: 100vh;
    }
</style>

<div class="contact-container">
    <!-- Hero Section - Küçültülmüş Versiyon -->
    <div class="contact-hero">
        <h1>Get in Touch</h1>
        <div class="decorative-line"></div>
        <p>We'd love to hear from you</p>
    </div>

    <!-- Contact Form Section -->
    <div class="form-container">
        <div class="contact-form">
            <h2>Send Us a Message</h2>

            <form id="contactForm">
                <div class="form-group">
                    <input type="text" id="name" name="Name" required>
                    <label for="name">Full Name</label>
                </div>

                <div class="form-group">
                    <input type="tel" id="phone" name="Phone" required>
                    <label for="phone">Phone Number</label>
                </div>

                <div class="form-group">
                    <input type="email" id="email" name="Email" required>
                    <label for="email">Email Address</label>
                </div>

                <div class="form-group">
                    <textarea id="message" name="Message" rows="4" required></textarea>
                    <label for="message">Your Message</label>
                </div>

                <button type="submit" class="submit-btn">
                    Send Message
                    <span class="btn-line"></span>
                </button>
            </form>

            <div id="confirmationMessage" class="confirmation-message">
                <p>Thank you for reaching out. We'll be in touch shortly.</p>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="contact-info">
            <div class="info-card">
                <h3>Visit Us</h3>
                <p>
                    Maslak Levent Business Center,<br>
                    Maslak Neighborhood, Büyükdere Street No:1,<br>
                    Floor 15, Şişli, Istanbul, Turkey
                </p>
            </div>

            <div class="info-card">
                <h3>Contact</h3>
                <a href="mailto:contact@prestijcompany.com">contact@prestijcompany.com</a>
            </div>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: #0a0a0a;
        color: #fff;
    }

    .contact-container {
        background: #0a0a0a;
        min-height: 100vh;
        color: #fff;
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        overflow-x: hidden;
    }

    .contact-hero {
        text-align: center;
        padding: 50px 20px; /* Padding'i azalttım */
        background: linear-gradient(45deg, #000, #1a1a1a);
        position: relative;
        width: 100%;
    }

    .contact-hero h1 {
        font-size: 2.5rem; /* Font boyutunu küçülttüm */
        font-weight: 300;
        letter-spacing: 0.3em;
        text-transform: uppercase;
        margin-bottom: 15px; /* Margin'i azalttım */
        color: #fff;
    }

    .contact-hero p {
        font-size: 1rem; /* Font boyutunu küçülttüm */
        letter-spacing: 0.2em;
        color: #d4af37;
    }

    .decorative-line {
        width: 120px; /* Çizgiyi kısalttım */
        height: 1px;
        background: linear-gradient(90deg, transparent, #d4af37, transparent);
        margin: 20px auto; /* Margin'i azalttım */
    }

    .form-container {
        max-width: 1200px;
        margin: -30px auto 50px; /* Üst margin'i azalttım */
        padding: 0 20px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }

    .contact-form {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        padding: 50px;
        border-radius: 8px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
    }

    .contact-form h2 {
        color: #d4af37;
        font-size: 2rem;
        font-weight: 300;
        margin-bottom: 40px;
        letter-spacing: 0.1em;
    }

    .form-group {
        position: relative;
        margin-bottom: 30px;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 15px 0;
        background: transparent;
        border: none;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        color: #fff;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-group label {
        position: absolute;
        top: 15px;
        left: 0;
        color: #666;
        font-size: 16px;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group input:valid,
    .form-group textarea:valid {
        border-bottom-color: #d4af37;
        outline: none;
    }

    .form-group input:focus + label,
    .form-group textarea:focus + label,
    .form-group input:valid + label,
    .form-group textarea:valid + label {
        transform: translateY(-30px);
        font-size: 12px;
        color: #d4af37;
    }

    .submit-btn {
        background: transparent;
        color: #d4af37;
        border: 1px solid #d4af37;
        padding: 15px 40px;
        font-size: 16px;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

    .submit-btn:hover {
        background: #d4af37;
        color: #000;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 0; /* Üst margin'i kaldırdım */
    }

    .info-card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .info-card h3 {
        color: #d4af37;
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 20px;
        letter-spacing: 0.1em;
    }

    .info-card p,
    .info-card a {
        color: #999;
        line-height: 1.8;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .info-card a:hover {
        color: #d4af37;
    }

    .confirmation-message {
        display: none;
        text-align: center;
        color: #d4af37;
        margin-top: 30px;
        padding: 20px;
        border: 1px solid #d4af37;
        border-radius: 4px;
    }

    @@media (max-width: 768px) {
        .form-container {
            grid-template-columns: 1fr;
            padding: 0 15px;
            margin-bottom: 50px;
        }

        .contact-hero h1 {
            font-size: 2rem;
        }

        .contact-form {
            padding: 30px;
        }

        .contact-hero {
            padding: 40px 15px; /* Mobile padding'i azalttım */
        }
    }
</style>

<script>
    document.getElementById("contactForm").addEventListener("submit", function (e) {
        e.preventDefault();
        document.getElementById("confirmationMessage").style.display = "block";
        this.reset();

        setTimeout(() => {
            document.getElementById("confirmationMessage").style.display = "none";
        }, 5000);
    });
</script>