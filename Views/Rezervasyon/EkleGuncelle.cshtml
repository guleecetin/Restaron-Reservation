@model Rezervasyon

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ResimUrl" hidden />
        <div class="row">
            <div class="col-10">
                <div class="card shadow-lg border-0 rounded-3 p-4 mt-4">
                    <div class="card-header bg-transparent border-0 pb-3">
                        <h2 class="text-center mb-0">@(Model == null ? "Add Reservation" : "Update Reservation")</h2>
                        <div class="text-center">
                            <div class="divider my-3"></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-medium mb-2"></label>
                            <input asp-for="Name" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RezervasyonTuruId" class="form-label fw-medium mb-2"></label>
                            <select asp-for="RezervasyonTuruId" asp-items="ViewBag.RezervasyonturuList" class="form-select form-control-lg shadow-sm">
                            </select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-medium mb-2"></label>
                            <input asp-for="Description" class="form-control form-control-lg shadow-sm" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="ReservationDate" class="form-label fw-medium mb-2"></label>
                            <input asp-for="ReservationDate" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="ReservationDate" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ReservationTime" class="form-label fw-medium mb-2"></label>
                            <input asp-for="ReservationTime" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="ReservationTime" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="GuestCount" class="form-label fw-medium mb-2"></label>
                            <input asp-for="GuestCount" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="GuestCount" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ContactNumber" class="form-label fw-medium mb-2"></label>
                            <input asp-for="ContactNumber" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="ContactNumber" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TableNumber" class="form-label fw-medium mb-2"></label>
                            <input asp-for="TableNumber" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="TableNumber" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-medium mb-2"></label>
                            <input asp-for="Price" class="form-control form-control-lg shadow-sm" />
                            <span asp-validation-for="Price" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ResimUrl" class="form-label fw-medium mb-2"></label>
                            <input type="file" name="file" class="form-control form-control-lg shadow-sm" />
                        </div>

                        <div class="d-flex gap-3 justify-content-center mt-4">
                            @if (Model != null)
                            {
                                <button type="submit" class="btn btn-lg px-4 py-2 btn-primary">
                                    <i class="bi bi-pencil-square me-2"></i>
                                    Update Reservation
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-lg px-4 py-2 btn-primary">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Add Reservation
                                </button>
                            }
                            <a asp-controller="Rezervasyon" asp-action="Index" class="btn btn-lg px-4 py-2 btn-outline">
                                <i class="bi bi-arrow-left me-2"></i>
                                Return to Reservations
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                @if (Model != null)
                {
                    <img src="@Model.ResimUrl" class="img-preview" alt="Reservation Image" />
                }
            </div>
        </div>
    </form>
</div>

<style>
    body {
        background: #0a0a0a;
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        transition: all 0.3s ease;
        border: 1px solid rgba(212,175,55,0.1) !important;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(212,175,55,0.15) !important;
        }

        .card h2 {
            color: #d4af37;
            font-weight: 300;
            letter-spacing: 0.2em;
        }

    .divider {
        height: 2px;
        background: linear-gradient(to right, transparent, #d4af37, transparent);
        width: 150px;
        margin: 0 auto;
    }

    .form-label {
        color: #d4af37;
        letter-spacing: 0.1em;
    }

    .form-control, .form-select {
        background-color: rgba(255,255,255,0.05) !important;
        border: 1px solid rgba(212,175,55,0.2) !important;
        color: #fff !important;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            background-color: rgba(255,255,255,0.1) !important;
            border-color: #d4af37 !important;
            box-shadow: 0 0 0 0.2rem rgba(212,175,55,0.15) !important;
        }

        .form-control::placeholder, .form-select::placeholder {
            color: rgba(255,255,255,0.5);
        }

    .btn-primary {
        background: #d4af37 !important;
        color: #000 !important;
        border: none !important;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: #fff !important;
            box-shadow: 0 0 30px rgba(212,175,55,0.5);
            transform: translateY(-2px);
        }

    .btn-outline {
        background: transparent !important;
        color: #d4af37 !important;
        border: 1px solid #d4af37 !important;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline:hover {
            background: rgba(212,175,55,0.1) !important;
            box-shadow: 0 0 30px rgba(212,175,55,0.3);
            transform: translateY(-2px);
        }

    .img-preview {
        width: 100%;
        border-radius: 7px;
        border: 1px solid #bbb9b9;
        margin-top: 24px;
    }

    /* Additional styles for select dropdown */
    .form-select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23d4af37' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
    }

        .form-select option {
            background-color: #1a1a1a;
            color: #fff;
        }

    /* For file input */
    input[type="file"]::-webkit-file-upload-button {
        background: #d4af37;
        color: #000;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        input[type="file"]::-webkit-file-upload-button:hover {
            background: #fff;
        }
</style>