<div class="container">
    @if (TempData["basarili"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["basarili"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-3 p-4 mt-4">
        <div class="card-header bg-transparent border-0 pb-3">
            <h2 class="text-center mb-0" style="color: #ffffff; font-weight: 500;">Reservations</h2>
            <div class="text-center">
                <div class="divider my-3" style="height: 2px; background: linear-gradient(to right, transparent, #ffffff, transparent); width: 150px; margin: 0 auto;"></div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover custom-table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Reservation Date</th>
                            <th>Time</th>
                            <th>Guests</th>
                            <th>Contact</th>
                            <th>Table</th>
                            <th>Price</th>
                            <th>Type</th>
                            <th colspan="2" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rezervasyon in Model)
                        {
                            <tr>
                                <td>@rezervasyon.Id</td>
                                <td>@rezervasyon.Name</td>
                                <td>@rezervasyon.Description</td>
                                <td>@rezervasyon.ReservationDate.ToString("dd/MM/yyyy")</td>
                                <td>@rezervasyon.ReservationTime</td>
                                <td>@rezervasyon.GuestCount</td>
                                <td>@rezervasyon.ContactNumber</td>
                                <td>@rezervasyon.TableNumber</td>
                                <td>@rezervasyon.Price.ToString("C")</td>
                                <td>@rezervasyon.RezervasyonTuru.Name</td>
                                <td>
                                    <a asp-controller="Rezervasyon" asp-action="EkleGuncelle" asp-route-id="@rezervasyon.Id"
                                       class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil-square me-1"></i>Update
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Rezervasyon" asp-action="Sil" asp-route-id="@rezervasyon.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Rezervasyon" asp-action="EkleGuncelle"
                   class="btn btn-sm px-3 py-1 btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>
                    Create New Reservation 
                </a>
            </div>
        </div>
    </div>
</div>

