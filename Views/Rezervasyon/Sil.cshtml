@model Rezervasyon

<div class="container">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="card shadow-lg border-0 rounded-3 p-4 mt-4">
            <div class="card-header bg-transparent border-0 pb-3">
                <h2 class="text-center mb-0">Delete Reservation</h2>
                <div class="text-center">
                    <div class="divider my-3"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Are you sure you want to delete this reservation?
                </div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-medium mb-2"></label>
                    <input asp-for="Name" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-medium mb-2"></label>
                    <input asp-for="Description" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="ReservationDate" class="form-label fw-medium mb-2"></label>
                    <input asp-for="ReservationDate" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="ReservationTime" class="form-label fw-medium mb-2"></label>
                    <input asp-for="ReservationTime" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="GuestCount" class="form-label fw-medium mb-2"></label>
                    <input asp-for="GuestCount" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="ContactNumber" class="form-label fw-medium mb-2"></label>
                    <input asp-for="ContactNumber" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="TableNumber" class="form-label fw-medium mb-2"></label>
                    <input asp-for="TableNumber" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label fw-medium mb-2"></label>
                    <input asp-for="Price" disabled class="form-control form-control-lg shadow-sm" />
                </div>

                <div class="d-flex gap-3 justify-content-center mt-4">
                    <button type="submit" class="btn btn-lg px-4 py-2 btn-danger">
                        <i class="bi bi-trash me-2"></i>
                        Delete Reservation
                    </button>
                    <a asp-controller="Rezervasyon" asp-action="Index" class="btn btn-lg px-4 py-2 btn-outline">
                        <i class="bi bi-arrow-left me-2"></i>
                        Return to Reservations
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    body {
        background: #0a0a0a;
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        transition: all 0.3s ease;
        border: 1px solid rgba(212,175,55,0.1) !important;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(212,175,55,0.15) !important;
        }

        .card h2 {
            color: #d4af37;
            font-weight: 300;
            letter-spacing: 0.2em;
        }

    .divider {
        height: 2px;
        background: linear-gradient(to right, transparent, #d4af37, transparent);
        width: 150px;
        margin: 0 auto;
    }

    .form-label {
        color: #d4af37;
        letter-spacing: 0.1em;
    }

    .form-control {
        background-color: rgba(255,255,255,0.05) !important;
        border: 1px solid rgba(212,175,55,0.2) !important;
        color: #fff !important;
        transition: all 0.3s ease;
    }

        .form-control:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    .alert-warning {
        background-color: rgba(212,175,55,0.1);
        border-color: #d4af37;
        color: #d4af37;
    }

    .btn-danger {
        background: #dc3545 !important;
        color: #fff !important;
        border: none !important;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background: #bb2d3b !important;
            box-shadow: 0 0 30px rgba(220,53,69,0.3);
            transform: translateY(-2px);
        }

    .btn-outline {
        background: transparent !important;
        color: #d4af37 !important;
        border: 1px solid #d4af37 !important;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline:hover {
            background: rgba(212,175,55,0.1) !important;
            box-shadow: 0 0 30px rgba(212,175,55,0.3);
            transform: translateY(-2px);
        }
</style>