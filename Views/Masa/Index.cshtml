@model IEnumerable<Masa>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-gold">Table List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Masa" asp-action="EkleGuncelle" class="btn btn-gold">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Table
            </a>
        </div>
    </div>
    <div class="row mt-4">
        @foreach (var masa in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="table-card">
                    <div class="card-body text-center">
                        <div class="table-visual mb-4">
                            <div class="table-icon @(masa.IsOccupied ? "occupied" : "available")">
                                <span class="table-number">@masa.TableNumber</span>
                            </div>
                        </div>
                        <h5 class="card-title text-gold">Table @masa.TableNumber</h5>
                        <div class="table-details mb-4">
                            <p class="mb-2">
                                <span class="label">Capacity:</span>
                                <span class="value">@masa.Capacity people</span>
                            </p>
                            <p class="mb-2">
                                <span class="label">Status:</span>
                                <span class="status-badge @(masa.IsOccupied ? "occupied" : "available")">
                                    @(masa.IsOccupied ? "Occupied" : "Available")
                                </span>
                            </p>
                        </div>
                        <div class="button-group">
                            <a asp-controller="Masa" asp-action="EkleGuncelle" asp-route-id="@masa.Id"
                               class="btn btn-edit">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Masa" asp-action="Sil" asp-route-id="@masa.Id"
                               class="btn btn-delete">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-table text-gold mb-3" style="font-size: 3rem;"></i>
            <h3 class="text-gold">No Tables Added Yet</h3>
            <p>Click the "Add New Table" button above to add your first table.</p>
        </div>
    }
</div>

<style>
    body {
        background: #0a0a0a;
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .text-gold {
        color: #d4af37;
    }

    .btn-gold {
        background: #d4af37;
        color: #000;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 600;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-gold:hover {
            background: #e5c158;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212,175,55,0.3);
        }

    .table-card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        border-radius: 15px;
        border: 1px solid rgba(212,175,55,0.1);
        transition: all 0.3s ease;
        padding: 1.5rem;
    }

        .table-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(212,175,55,0.15);
        }

    .table-visual {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .table-icon {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        position: relative;
        border: 2px solid;
        transition: all 0.3s ease;
    }

        .table-icon.available {
            background: rgba(40, 167, 69, 0.1);
            border-color: #28a745;
        }

        .table-icon.occupied {
            background: rgba(220, 53, 69, 0.1);
            border-color: #dc3545;
        }

    .table-number {
        font-size: 28px;
        font-weight: bold;
        color: #d4af37;
    }

    .table-details {
        min-height: 70px;
    }

    .label {
        color: #d4af37;
        font-weight: 500;
        margin-right: 8px;
    }

    .value {
        color: #fff;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

        .status-badge.available {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 1px solid #28a745;
        }

        .status-badge.occupied {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
            border: 1px solid #dc3545;
        }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-edit, .btn-delete {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .btn-edit {
        background: #d4af37;
        color: #000;
        border: none;
    }

        .btn-edit:hover {
            background: #e5c158;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212,175,55,0.3);
        }

    .btn-delete {
        background: transparent;
        color: #dc3545;
        border: 1px solid #dc3545;
    }

        .btn-delete:hover {
            background: rgba(220, 53, 69, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220,53,69,0.2);
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        border-radius: 15px;
        border: 1px solid rgba(212,175,55,0.1);
        margin-top: 2rem;
    }

        .empty-state h3 {
            margin-bottom: 1rem;
        }

        .empty-state p {
            color: rgba(255,255,255,0.7);
        }
</style>