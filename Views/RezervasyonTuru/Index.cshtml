@model List<RezervasyonTuru>

<div class="container">
    @if (TempData["basarili"] != null)
    {
            <div class="alert alert-success border-0 rounded-3 shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["basarili"]
            </div>
    }

    <div class="card shadow-lg border-0 rounded-3 p-4 mt-4">
        <div class="card-header bg-transparent border-0 pb-3">
            <h2 class="text-center mb-0">
                <i class="bi bi-list-check me-2"></i>
                Reservation Types
            </h2>
            <div class="text-center">
                <div class="divider my-3"></div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Reservation Type</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rezervasyonTuru in Model)
                    {
                            <tr>
                                <td>@rezervasyonTuru.Id</td>
                                <td>@rezervasyonTuru.Name</td>
                                <td>
                                    <a asp-controller="RezervasyonTuru" asp-action="Guncelle" asp-route-id="@rezervasyonTuru.Id"
                                       class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-pencil-square me-2"></i>
                                        Update
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="RezervasyonTuru" asp-action="Sil" asp-route-id="@rezervasyonTuru.Id"
                                       class="btn btn-outline-danger w-100">
                                        <i class="bi bi-trash me-2"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>

      <div class="text-center mt-4">
    <a asp-controller="RezervasyonTuru" asp-action="Ekle" 
       class="btn btn-sm px-3 py-1 btn-primary">
        <i class="bi bi-plus-circle me-2"></i>
        Create New Reservation Type
    </a>
</div>

    </div>
</div>

<style>
    body {
        background: #0a0a0a;
        font-family: 'Montserrat', sans-serif;
        color: #fff;
    }

    .card {
        background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
        transition: all 0.3s ease;
        border: 1px solid rgba(212,175,55,0.1) !important;
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(212,175,55,0.15) !important;
    }

    .card h2 {
        color: #d4af37;
        font-weight: 300;
        letter-spacing: 0.2em;
    }

    .divider {
        height: 2px;
        background: linear-gradient(to right, transparent, #d4af37, transparent);
        width: 200px;
        margin: 0 auto;
    }

    /* Table Styles */
    .table {
        color: #fff;
        margin-bottom: 0;
    }

    .table thead th {
        border-bottom: 2px solid rgba(212,175,55,0.2);
        color: #d4af37;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        background: transparent;
    }

    .table td {
        border-bottom: 1px solid rgba(255,255,255,0.1);
        vertical-align: middle;
        padding: 1rem;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: rgba(212,175,55,0.05);
    }

    /* Button Styles */
    .btn-primary {
        background: #d4af37 !important;
        color: #000 !important;
        border: none !important;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 300px;
    }

    .btn-primary:hover {
        background: #fff !important;
        box-shadow: 0 0 30px rgba(212,175,55,0.5);
        transform: translateY(-2px);
    }

    .btn-outline-secondary {
        background: transparent !important;
        color: #d4af37 !important;
        border: 1px solid #d4af37 !important;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background: rgba(212,175,55,0.1) !important;
        color: #fff !important;
        transform: translateY(-2px);
    }

    .btn-outline-danger {
        background: transparent !important;
        color: #dc3545 !important;
        border: 1px solid #dc3545 !important;
        transition: all 0.3s ease;
    }

    .btn-outline-danger:hover {
        background: rgba(220,53,69,0.1) !important;
        color: #fff !important;
        transform: translateY(-2px);
    }

    /* Alert Styles */
    .alert-success {
        background: rgba(212,175,55,0.1) !important;
        border: 1px solid rgba(212,175,55,0.2) !important;
        color: #d4af37 !important;
    }

    .alert-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(212,175,55,0.15);
    }
</style>